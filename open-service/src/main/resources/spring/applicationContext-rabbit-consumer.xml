<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xmlns:task="http://www.springframework.org/schema/task"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                http://www.springframework.org/schema/rabbit
                http://www.springframework.org/schema/rabbit/spring-rabbit-1.4.xsd
                http://www.springframework.org/schema/task  
    http://www.springframework.org/schema/task/spring-task-4.1.xsd">

    <!-- 异步的线程池，线程池的最在数不能设定太小，不然<rabbit:listener/>/@RabbitListener太多的话，会出现发无法正常消费问题 -->  
    <task:executor id="taskExecutor" pool-size="4-256" keep-alive="30000" queue-capacity="128" />  
    
	<rabbit:listener-container
		connection-factory="openConnectionFactory" 
		message-converter="roomTypeModifyEventMessageConverter"
		auto-startup="true" 
		error-handler="" 
		acknowledge="auto" 
		task-executor="taskExecutor" >
		<rabbit:listener ref="roomTypeModifyRmqConsumer" method="reveiveRoomTypeModifyMessage"
			queue-names="${open.rabbitmq.roomType.queue}" 
			/>
	</rabbit:listener-container>
	
	<rabbit:listener-container
		connection-factory="openConnectionFactory" 
		message-converter="hotelModifyEventMessageConverter"
		auto-startup="true" 
		error-handler="" 
		acknowledge="auto" 
		task-executor="taskExecutor" >
		<rabbit:listener ref="hotelModifyRmqConsumer" method="reveiveHotelModifyMessage"
			queue-names="${open.rabbitmq.hotel.queue}" 
			/>
	</rabbit:listener-container>
	

	<bean id="roomTypeModifyRmqConsumer" class="com.zizaike.open.RoomTypeModifyRmqConsumer" />
	<bean id="roomTypeModifyEventMessageConverter" class="com.zizaike.open.repository.RoomTypeModifyEventMessageConverter" />
	<bean id="hotelModifyRmqConsumer" class="com.zizaike.open.HotelModifyRmqConsumer" />
	<bean id="hotelModifyEventMessageConverter" class="com.zizaike.open.repository.HotelModifyEventMessageConverter" />
	<bean id="queueListenter" class="com.zizaike.open.QueueListenter" />
	
    
</beans>